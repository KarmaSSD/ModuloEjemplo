<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <menuitem id="menu_modulo_pc_root"
              name="Gestion de ordenadores"
              sequence="20"/>

    <record id="action_pc_componente" model="ir.actions.act_window">
        <field name="name">componentes</field>
        <field name="res_model">pc.componente</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_pc_ordenador" model="ir.actions.act_window">
        <field name="name">ordenadores</field>
        <field name="res_model">pc.ordenador</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_sistema_operativo" model="ir.actions.act_window">
        <field name="name">Sistemas operativos</field>
        <field name="res_model">pc.sistema.operativo</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_modulo_pc_componentes"
              name="Componentes"
              parent="menu_modulo_pc_root"
              action="action_pc_componente"
              sequence="10"/>

    <menuitem id="menu_modulo_pc_ordenadores"
              name="Ordenadores"
              parent="menu_modulo_pc_root"
              action="action_pc_ordenador"
              sequence="20"/>

    <menuitem id="menu_sistema_operativo"
              name="Sistemas Operativos"
              parent="menu_modulo_pc_root"
              action="action_sistema_operativo"/>


</odoo>
