<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sistema_operativo_list" model="ir.ui.view">
        <field name="name">pc.sistema.operativo.list</field>
        <field name="model">pc.sistema.operativo</field>
        <field name="arch" type="xml">
            <list string="Sistemas Operativos">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_sistema_operativo_form" model="ir.ui.view">
        <field name="name">pc.sistema.operativo.form</field>
        <field name="model">pc.sistema.operativo</field>
        <field name="arch" type="xml">
            <form string="Sistema Operativo">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sistema_operativo" model="ir.actions.act_window">
        <field name="name">Sistemas Operativos</field>
        <field name="res_model">pc.sistema.operativo</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
