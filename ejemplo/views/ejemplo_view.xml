<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ejemplo_tree" model="ir.ui.view">
        <field name="name">ejemplo.ejemplo.list</field>
        <field name="model">ejemplo.ejemplo</field>
        <field name="arch" type="xml">
            <list string="Ejemplos">
                <field name="name"/>
                <field name="descripcion"/>
                <field name="activo"/>
            </list>
        </field>
    </record>

    <record id="view_ejemplo_form" model="ir.ui.view">
        <field name="name">ejemplo.ejemplo.form</field>
        <field name="model">ejemplo.ejemplo</field>
        <field name="arch" type="xml">
            <form string="Ejemplo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                        <field name="activo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
