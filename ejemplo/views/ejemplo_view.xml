<odoo>
    <record id="view_ejemplo_list" model="ir.ui.view">
        <field name="name">ejemplo.list</field>
        <field name="model">ejemplo.ejemplo</field>
        <field name="arch" type="xml">
            <list string="Ejemplos">
                <field name="name"/>
                <field name="descripcion"/>
                <field name="activo"/>
            </list>
        </field>
    </record>

    <record id="view_ejemplo_form" model="ir.ui.view">
        <field name="name">ejemplo.form</field>
        <field name="model">ejemplo.ejemplo</field>
        <field name="arch" type="xml">
            <form string="Ejemplo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                        <field name="activo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ejemplo" model="ir.actions.act_window">
        <field name="name">Ejemplos</field>
        <field name="res_model">ejemplo.ejemplo</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_ejemplo_root" name="Ejemplo" sequence="10"/>
    <menuitem id="menu_ejemplo" name="GestiÃ³n de Ejemplos"
              parent="menu_ejemplo_root" action="action_ejemplo"/>
</odoo>